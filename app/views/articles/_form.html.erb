<%= form_for(@article) do |form| %>
  <ul>
    <% @article.errors.full_messages.each do |error| %>
      <li><%= error %></li>
    <% end %>
  </ul>
    <p>
      <%= form.label :title %>
      <br />
      <%= form.text_field :title %>
    </p>
    <p>
      <%= form.label :body %>
      <br />
      <%= form.text_area :body %>
    </p>
    <p>
      <%= form.submit %>
    </p>
<% end %>
<%= link_to "Back to Articles List", articles_path, class: 'to_index' %>